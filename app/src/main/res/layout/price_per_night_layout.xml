    android:layout_height="match_parent"
    android:background="#ffffff">




    <TableLayout
        android:id="@+id/price_rooms"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<TableRow android:id="@+id/pricepernight_row" android:background="#807f7f" >
<CheckBox
    android:id="@+id/pricepernight_checkbox"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:text="@string/price_per_night"
    android:textColor="@color/white"
    android:textSize="20sp"
    android:buttonTint="@color/white"
    android:paddingStart="100dp"
    android:paddingEnd="0dp"
    android:layout_gravity="center"

    />




</TableRow>



        <TableRow
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/single_room_price">

         <TextView android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:text="@string/single_bed"
             android:layout_marginStart="40dp"
             android:textSize="15sp"
             android:textColor="@color/blacky"
             android:layout_gravity="bottom"/>


            <EditText
                android:id="@+id/single_room_enter_amount"
                android:layout_height="wrap_content"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:inputType="number"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                android:hint="@string/enter_amount"    />


        </TableRow>


